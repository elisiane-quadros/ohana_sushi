generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Product model based on existing interface
model Product {
  id          Int           @id @default(autoincrement())
  title       String
  image       String
  price       Float
  type        ProductType
  order       Int
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  ingredients Ingredient[]

  @@map("products")
}

// Ingredient model
model Ingredient {
  id        Int     @id @default(autoincrement())
  name      String
  quantity  Int
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("ingredients")
}

enum ProductType {
  ALL
  COMBO
  PORTION
  POKES
  YAKISOBA
  MEGA_HOT
  TEMAKI
  ITEM
  DRINK
  OTHER
  URAMAKIS
  HOTS
  HOSSOS
}
